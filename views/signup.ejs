                    <!-- Section Heading -->
                    <div class="section-heading">
                        <h2>Sign Up</h2>
                        <p>Happy Shopping <i class="fa fa-smile-o" aria-hidden="true"></i></p>
                    </div>
                    <!-- Contact Form Area -->
                    <div class="contact-form-area mb-100">
                        <form action="/signin" method="post">
                            <div class="row ">
                                
                                <div class="col-12 col-md-6">
                                    <div  class="form-group">
                                                <b>Name</b>
                                                <input type="text" class="form-control"  id="fname" name="fname" placeholder="Fullname" pattern="[A-Z][A-Za-z]{4,20}" required>    
                                    </div>
                                    <div class="form-group">
                                            <b>Username</b>
                                        <input type="text" class="form-control"  id="uname" name="uname" placeholder="username" pattern="[A-Za-z][a-z0-9]{4,10}" required>
                                    </div>
                                    <div class="form-group">
                                            <b>Email</b>
                                            <input type="email" class="form-control"  id="email" name="email" placeholder="Email" required>
                                         </div>
                                         <div class="form-group">
                                                <b>Password</b>
                                                <input type="password" class="form-control"  id="password" name="password" placeholder="Password must contain atleast 8 letters" minlength="8" required>
                                        </div>
                                        <div class="form-group">
                                            <b>Role</b>
                                            <select name="role" id="role" class="custom-select d-block w-100">
                                                    <option value="user" name="user" class="form-control">User</option>
                                                    <option value="admin" name="admin" class="form-control">Admin</option>
                                                </select>
                                        </div>

                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn alazea-btn mt-15">Sign up</button>
                                    <a href="/login" class="btn alazea-btn mt-15">Login</a>
                                </div>
                                <div class="col-12"></div>
                            </div>
                        </form>
                    </div>
